<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <nav class="bg-gradient-to-r from-slate-900 via-purple-900 to-slate-900">
      <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
        <div class="relative flex items-center justify-between h-16">
          <div
            class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start"
          >
            <div class="block sm:ml-6">
              <div class="flex space-x-4">
                <a
                  href="/"
                  class="bg-gray-900 text-white px-3 py-2 rounded-md text-sm font-medium"
                  aria-current="page"
                  >Home</a
                >

                <a
                  href="/projects"
                  class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium"
                  >Projects</a
                >
              </div>
            </div>

            <div class="flex justify-end space-x-4 w-full">
              <button
                onclick="showAddProject()"
                href="#"
                class="bg-gray-900 text-white px-3 py-2 rounded-md text-sm font-medium"
                aria-current="page"
              >
                Add Project
              </button>
            </div>

            <div
              id="addProject"
              class="fixed z-10 inset-0 overflow-y-auto hidden"
              aria-labelledby="modal-title"
              role="dialog"
              aria-modal="true"
            >
              <div
                class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0"
              >
                <div
                  class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
                  aria-hidden="true"
                ></div>

                <span
                  class="hidden sm:inline-block sm:align-middle sm:h-screen"
                  aria-hidden="true"
                  >&#8203;</span
                >

                <div
                  class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6"
                >
                  <div>
                    <form action="/projects/add" method="POST">
                      <div>
                        <div class="mb-5">
                          <label class="text-gray-700 text-sm" for="title"
                            >Title</label
                          >
                          <input
                          name="project_title"
                            id="title"
                            type="text"
                            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
                          />
                        </div>

                        <div class="flex space-x-[4.3rem] mb-5">
                          <div>
                            <label class="text-gray-700 text-sm" for="start_dt"
                              >Start Date</label
                            >
                            <input
                            name="project_start_dt"
                              id="start_dt"
                              type="date"
                              class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
                            />
                          </div>

                          <div>
                            <label class="text-gray-700 text-sm" for="due_dt"
                              >Due Date</label
                            >
                            <input
                            name="project_due_dt"

                              id="due_dt"
                              type="date"
                              class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
                            />
                          </div>
                        </div>

                        <div class="mb-5">
                          <label class="text-gray-700 text-sm" for="description"
                            >Description</label
                          >
                          <textarea
                            cols="30"
                            rows="5"
                            name="project_description"

                            id="description"
                            class="resize-none block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring"
                          ></textarea>
                        </div>
                      </div>

                      <div class="flex justify-end mt-6">
                        <button  
                          class="px-6 py-2 leading-5 text-white transition-colors duration-200 transform bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600"
                        >
                          Save
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <script>
      const showAddProject = () => {
        var modal = document.getElementById("addProject");
        if (modal.style.display === "none") {
          modal.style.display = "block";
        } else {
          modal.style.display = "none";
        }
      }
    </script>
  </body>
</html>
