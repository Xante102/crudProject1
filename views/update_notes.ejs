<!-- <h1 class="text-3xl font-bold text-gray-700">Editing <%= student[0].name.split(' ')[0] %>'s profile</h1> -->
<form name="editForm" id="editForm" class="w-full max-w-lg" data-student-id="<%= student[0].id %>">
	<div class="flex flex-wrap -mt-44 -mx-3 mb-6">
		<div class="w-full px-3">
			<label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-fullname"> Full Name </label>
			<input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" name="name" type="text" value="<%= student[0].name %>" placeholder="<%= student[0].name %>" />
		</div>
	</div>
	<div class="flex flex-wrap -mx-3 mb-6">
		<div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
			<label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-first-name"> Username </label>
			<input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" name="username" type="text" value="<%= student[0].username%>" placeholder="<%= student[0].username %>" />
		</div>
		<div class="w-full md:w-1/2 px-3">
			<label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-last-name"> Email </label>
			<input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" name="email_address" type="text" value="<%= student[0].email_address %>" placeholder="<%= student[0].email_address %>" />
		</div>
	</div>
	<div class="flex flex-wrap justify-end -mx-3 mb-2">
		<div class="px-3">
			<input class="cursor-pointer w-full bg-blue-500 text-white rounded py-3 px-4 mb-3 hover:bg-blue-600" type="submit" value="Submit" />
		</div>
	</div>
</form>

<script src="editForm.js"></script>